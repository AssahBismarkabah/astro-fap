---
export function getStaticPaths() {
  const allPosts = import.meta.glob('./*.md', { eager: true });
  return Object.keys(allPosts).map((path) => {
    const slug = path.split('/').pop().replace('.md', '');
    return { params: { slug } };
  });
}

const allPosts = import.meta.glob('./*.md', { eager: true });

const slug = Astro.params.slug;
const postEntry = Object.entries(allPosts).find(([path]) =>
  path.endsWith(`/${slug}.md`)
);
if (!postEntry) throw new Error('Post not found');
const post = postEntry[1] as { frontmatter: any; Content: any };
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>{post ? post.frontmatter.title : 'Blog Article'} | Assah Bismark</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        background: #13151a;
        color: #fff;
        margin: 0;
        padding: 0;
        min-height: 100vh;
      }
      .container {
        max-width: 700px;
        margin: 3rem auto 0 auto;
        padding: 2rem 1rem 4rem 1rem;
        background: none;
        width: 100%;
        box-sizing: border-box;
        position: relative;
        left: 0;
        right: 0;
      }
      
      @media (max-width: 768px) {
        .container {
          margin: 2rem auto 0 auto;
          padding: 1.5rem 1rem 3rem 1rem;
          max-width: 100%;
        }
        
        .post-title {
          font-size: 1.8rem !important;
        }
        
        .prose {
          font-size: 1.1rem !important;
        }
      }
      .back-link {
        color: #b0b8c1;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        cursor: pointer;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.2s ease;
      }
      .back-link:hover {
        color: #fff;
      }
      .post-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        text-align: left;
      }
      .post-date {
        color: #b0b8c1;
        font-size: 1rem;
        margin-bottom: 0.75rem;
        text-align: left;
      }
      .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
        margin-bottom: 1.5rem;
      }
      .post-tag {
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.25);
        border-radius: 4px;
        padding: 0.25rem 0.6rem;
        font-size: 0.8rem;
        color: #60a5fa;
      }
      .prose {
        color: #fff;
        line-height: 1.7;
        text-align: left;
        max-width: 100%;
        word-wrap: break-word;
        overflow-wrap: break-word;
      }
      .prose a {
        color: #60a5fa;
        text-decoration: underline;
        text-underline-offset: 2px;
        transition: color 0.2s ease;
      }
      .prose a:hover {
        color: #93c5fd;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/blog" class="back-link">&larr; Blog</a>
      <div class="post-date">{post.frontmatter.date}</div>
      <div class="post-title">{post.frontmatter.title}</div>
      {post.frontmatter.tags && post.frontmatter.tags.length > 0 && (
        <div class="post-tags">
          {post.frontmatter.tags.map(tag => (
            <span class="post-tag">{tag}</span>
          ))}
        </div>
      )}
      <article class="prose dark:prose-invert">
        <post.Content />
      </article>
    </div>
  </body>
</html>
